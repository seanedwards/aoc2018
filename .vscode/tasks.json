{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "build",
      "group": "build",
      "command": "mix",
      "args": [
        "compile"
      ],
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ]
    },
    {
      "type": "process",
      "label": "test",
      "group": "test",
      "command": "mix",
      "args": [
        "test"
      ],
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    }
  ]
}